{
  "name": "intenso",
  "description": "yet another blazing fast web framework",
  "author": "natixco",
  "license": "MIT",
  "version": "0.0.4",
  "repository": {
    "type": "git",
    "url": "https://github.com/natixco/intenso.git"
  },
  "keywords": [
    "web",
    "http",
    "rest",
    "router",
    "framework"
  ],
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "require": "./build/cjs/index.js",
      "import": "./build/esm/index.js",
      "types": "./build/index.d.ts"
    }
  },
  "files": [
    "build"
  ],
  "scripts": {
    "compile": "tsc -b ./tsconfig.cjs.json ./tsconfig.esm.json",
    "build": "npm-run-all compile && node ./scripts/prepare-package-json",
    "build:defs": "tsc --declaration --outFile ./build/index.d.ts --emitDeclarationOnly",
    "release": "npm run build && npm run build:defs && changeset publish",
    "lint": "tsc",
    "changeset": "changeset"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.0",
    "@types/node": "^18.15.11",
    "nodemon": "^2.0.22",
    "npm-run-all": "^4.1.5",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "colorette": "^2.0.19"
  }
}
