{
  "compilerOptions": {
    "outDir": "./build",
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "Node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": true,
    "declaration": true,
    "declarationDir": "./build/types",
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "./build"
  ]
}
